{
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "emitDeclarationOnly": false,
    "noEmit": false,
    "incremental": true,
    "outDir": "dist",
    "rootDir": ".",
    "esModuleInterop": true,
    "target": "ES2021",
    "module": "commonjs",
    "lib": [
      "ESNext",
      "DOM"
    ],
    "isolatedModules": false,
    "moduleResolution": "node",
    "allowJs": true,
    "strict": false,
    "noImplicitReturns": true,
    "forceConsistentCasingInFileNames": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "baseUrl": ".",
    "types": ["vitest/globals"]
  },
  "include": ["src/**/*"],
  "typeAcquisition": {
    "enable": true
  }
}
